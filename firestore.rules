rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Access codes - read only for verification
    match /accessCodes/{codeId} {
      allow read: if true;
      allow write: if false; // Only admin can create via admin panel
    }
    
    // Submissions - write only
    match /submissions/{submissionId} {
      allow read: if false;
      allow create: if true;
      allow update, delete: if false;
    }
  }
}
